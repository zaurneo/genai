FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the entire tools directory
COPY tools /app/tools

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
ENV MCP_SERVER=""
ENV PORT=""

# Create entrypoint script with proper formatting
RUN printf '#!/bin/bash\nif [ "$MCP_SERVER" = "stock_data" ]; then\n    exec python -m tools.mcp_servers.stock_data_http_server\nelif [ "$MCP_SERVER" = "technical_analysis" ]; then\n    exec python -m tools.mcp_servers.technical_http_server\nelse\n    echo "Error: MCP_SERVER environment variable not set"\n    exit 1\nfi\n' > /app/entrypoint.sh && chmod +x /app/entrypoint.sh

CMD ["/app/entrypoint.sh"]